<h3><%= @project.name %></h3>

<table>
  <thead>
    <th>Name</th>
    <th>Assignee</th>
    <th>Status</th>
    <th>Tags</th>
    <th></th>
  </thead>
  <tbody>
    <%= render "tickets/ticket", ticket: @ticket %>
  </tbody>
</table>

<br />

<%= link_to "Back to " + @project.name, project_path(@project) %>

<h4>Comments</h4>

<% @ticket.comments.each do |comment| %>
  <%= render 'comments/comment', comment: comment, ticket: @ticket, project: @project %>
<% end %>

<h4>Add A Comment</h4>
<%= render 'comments/form', comment: Comment.new, ticket: @ticket, project: @project %>

