<h3>Projects:</h3>

<% if @projects.empty? %>
  <p>There are no projects in the system! Please add some first.</p>
<% else %>
<table>
  <thead>
    <th>Name</th>
    <th>Description</th>
    <th>Total Tickets</th>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td>
        <%= link_to project.name, project_path(project) %>
      </td>
      <td><%= shorten_desc(project) %></td>
      <td><%= project.tickets.length %></td>
    </tr>
    <% end %>  
  </tbody>
</table>
<% end %>

<% if is_logged_in? %>
  <%= link_to "New Project", new_project_path %>
<% end %>
<br />
